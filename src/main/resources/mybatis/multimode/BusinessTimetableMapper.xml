<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.multimode.mapper.BusinessTimetableMapper">
    <resultMap type="BusinessTimetable" id="BusinessTimetableResult">
        <result property="businessId"    column="business_id"    />
        <result property="businessName"    column="business_name"    />
        <result property="businessTimetableId"    column="business_timetable_id"    />
        <result property="subtaskId"    column="subtask_id"    />
        <result property="taskId"    column="task_id"    />
        <result property="time"    column="time"    />
        <result property="cost"    column="cost"    />
    </resultMap>

    <select id="findAll" resultType="com.ruoyi.project.multimode.domain.BusinessTimetable">
        SELECT * FROM business_timetable;
    </select>


    <!-- 对个数进行统计 -->
    <select id="countBusinessById" resultType="java.util.Map">
        SELECT business_id, COUNT(*) AS count
        FROM business_jrx
        GROUP BY business_id;
    </select>

    <select id="getTmachineData" resultMap="BusinessTimetableResult">
        SELECT bt.businessTimetableId, bt.businessId, bt.businessName, bt.taskId, bt.subtaskId, bt.time, bt.cost
        FROM BusinessTimetable bt
                 JOIN Subtasklist st ON bt.taskId = st.taskId AND bt.subtaskId = st.subtaskId
        WHERE bt.time > 0
        ORDER BY bt.taskId, bt.subtaskId;
    </select>
</mapper>