<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.multimode.mapper.SubtasklistMapper">
    <resultMap type="Subtasklist" id="SubtasklistResult">
        <result property="subtaskName"    column="subtask_name"    />
        <result property="subtaskId"    column="subtask_id"    />
        <result property="taskId"    column="task_id"    />
    </resultMap>

    <select id="findAll" resultType="com.ruoyi.project.multimode.domain.Subtasklist">
        SELECT * FROM subtasklist;
    </select>


    <!-- 对个数进行统计 -->
    <select id="countBusinessById" resultType="java.util.Map">
        SELECT business_id, COUNT(*) AS count
        FROM business_jrx
        GROUP BY business_id;
    </select>

    <select id="getSubtaskInfo" resultMap="SubtasklistResult">
        SELECT subtaskId, taskId, subtaskName
        FROM Subtasklist
        ORDER BY taskId, subtaskId;
    </select>
</mapper>