<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.multig.mapper.MutigTaskMapper">
    <!-- 查询所有任务 -->
    <select id="selectAllTasks" resultType="com.ruoyi.project.multig.domain.MutigTask">
        SELECT c.task_id AS id,
               c.name AS name
        FROM coalition c
                 JOIN coalition_company cc ON c.task_id = cc.coalition_id
        WHERE cc.company_id = #{userId}
    </select>


</mapper>

