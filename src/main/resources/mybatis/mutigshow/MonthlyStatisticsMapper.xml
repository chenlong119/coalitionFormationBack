<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.multigshow.updateStatisticsTask.mapper.MonthlyStatisticsMapper">

    <insert id="insertMonthlyStatistics" parameterType="com.ruoyi.project.multigshow.updateStatisticsTask.domain.MonthlyStatistics">
        INSERT INTO monthly_statistics_sxz (month, high_score_count)
        VALUES (#{month}, #{highScoreCount})
    </insert>

    <select id="countHighScoreCompanies" resultType="int" parameterType="int">
        SELECT COUNT(*) FROM company_show_sxz WHERE score >= #{score}
    </select>
    <select id="selectAllMonthlyStatistics" resultType="com.ruoyi.project.multigshow.updateStatisticsTask.domain.MonthlyStatistics">
        SELECT * FROM monthly_statistics_sxz
    </select>
</mapper>
