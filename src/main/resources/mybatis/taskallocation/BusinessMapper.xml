<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.taskallocation.mapper.BusinessMapper">
    <resultMap type="Business" id="BusinessResult">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="neighbor" column="neighbor"/>
        <result property="skillNum" column="skill_num"/>
        <result property="address" column="address"/>
        <result property="chain" column="chain"/>
        <result property="park" column="park"/>
        <result property="state" column="state"/>
        <result property="task" column="task"/>
        <result property="ispublish" column="ispublish"/>
        <result property="layer" column="layer"/>
    </resultMap>

    <sql id="selectBusinessVo">
        select id,
               name,
               neighbor,
               skill_num,
               address,
               chain,
               park,
               state,
               task,
               ispublish,
               layer,
               longitude,
               latitude
        from business
    </sql>

    <select id="selectBusinessList" parameterType="Business" resultMap="BusinessResult">
        <include refid="selectBusinessVo"/>
        <where>
            <if test="id != null ">
                and id = #{id}
            </if>
            <if test="chain != null  and chain != ''">
                and chain = #{chain}
            </if>
            <if test="task != null  and task != ''">
                and task = #{task}
            </if>
            <if test="state != null ">
                and state = #{state}
            </if>
        </where>
    </select>

    <select id="selectBusinessById" parameterType="String" resultMap="BusinessResult">
        <include refid="selectBusinessVo"/>
        where id = #{id}
    </select>

    <insert id="insertBusiness" parameterType="Business">
        insert into business
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">
                id,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="neighbor != null">
                neighbor,
            </if>
            <if test="skillNum != null">
                skill_num,
            </if>
            <if test="address != null">
                address,
            </if>
            <if test="chain != null">
                chain,
            </if>
            <if test="park != null">
                park,
            </if>
            <if test="state != null">
                state,
            </if>
            <if test="task != null">
                task,
            </if>
            <if test="ispublish != null">
                ispublish,
            </if>
            <if test="layer != null">
                layer,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">
                #{id},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="neighbor != null">
                #{neighbor},
            </if>
            <if test="skillNum != null">
                #{skillNum},
            </if>
            <if test="address != null">
                #{address},
            </if>
            <if test="chain != null">
                #{chain},
            </if>
            <if test="park != null">
                #{park},
            </if>
            <if test="state != null">
                #{state},
            </if>
            <if test="task != null">
                #{task},
            </if>
            <if test="ispublish != null">
                #{ispublish},
            </if>
            <if test="layer != null">
                #{layer},
            </if>
        </trim>
    </insert>

    <update id="updateBusiness" parameterType="Business">
        update business
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">
                name = #{name},
            </if>
            <if test="neighbor != null">
                neighbor = #{neighbor},
            </if>
            <if test="skillNum != null">
                skill_num = #{skillNum},
            </if>
            <if test="address != null">
                address = #{address},
            </if>
            <if test="chain != null">
                chain = #{chain},
            </if>
            <if test="park != null">
                park = #{park},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
            <if test="task != null">
                task = #{task},
            </if>
            <if test="ispublish != null">
                ispublish = #{ispublish},
            </if>
            <if test="layer != null">
                layer = #{layer},
            </if>
            <if test="longitude != null">
                longitude = #{longitude},
            </if>
            <if test="latitude != null">
                latitude = #{latitude},
            </if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBusinessById" parameterType="String">
        delete
        from business
        where id = #{id}
    </delete>

    <delete id="deleteBusinessByIds" parameterType="String">
        delete from business where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>